@using TravelingSalesmanWebApp.Domain.Services
@inherits LayoutComponentBase
@inject IUserSettingsRepository UserSettingsRepository
@inject ApplicationDBContext Context

<MudDialogProvider/>
<MudSnackbarProvider/>
<PageTitle>Задача коммивояжёра</PageTitle>
<MudThemeProvider @bind-IsDarkMode="@IsDarkMode" Theme="MudColorSettings.UserTheme"/>
<MudColorSettings/>

<MudLayout>
    <MudContainer>
        <MudAppBar Color="Color.Dark">
            <MudIconButton Icon="@Icons.Material.Rounded.Menu" OnClick="OpenSideMenu"/>
            <MudToggleIconButton ToggledIcon="@Icons.Material.Rounded.DarkMode" Icon="@Icons.Material.Rounded.LightMode" @bind-Toggled="@IsDarkMode"/>
        </MudAppBar>
        <MudDrawer Open="IsDrawerOpened" Variant="@DrawerVariant.Mini" Anchor="Anchor.Start" Elevation="1">
            <MudNavMenu>
                <MudNavLink Icon="@Icons.Material.Filled.LocationCity" Href="/City">Города</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.EditRoad" Href="/Paths">Пути</MudNavLink>
                <MudNavLink Icon="@Icons.Material.Filled.Calculate" Href="/PathFindingPage">Расчёт</MudNavLink>
            </MudNavMenu>
        </MudDrawer>
        <MudMainContent Class="pt-16 px-16">
            <MudContainer Class="mt-8 p-lg-2">
                @Body
            </MudContainer>
        </MudMainContent>
    </MudContainer>
   
</MudLayout>

@code
{

    private bool IsDrawerOpened
    {
        get => UserSettingsRepository.DrawerOpened;
        set => UserSettingsRepository.DrawerOpened = value;
    }

    private bool IsDarkMode
    {
        get => UserSettingsRepository.DarkMode;
        set => UserSettingsRepository.DarkMode = value;
    }

    private void OpenSideMenu()
    {
        IsDrawerOpened = !IsDrawerOpened;
    }
}